{
  "name": "lgtm-action",
  "version": "1.2.6",
  "private": true,
  "description": "Post image if you comment \"LGTM\"",
  "main": "dist/index.js",
  "scripts": {
    "postinstall": "husky install",
    "build": "ncc build src/main.ts -m --license licenses.txt",
    "fix": "run-p fix:*",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:prettier": "yarn lint:prettier --write",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --ext .ts --ignore-path .gitignore .",
    "lint:prettier": "prettier --ignore-path .gitignore -l \"**/*.{ts,json,yml}\"",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ddradar/lgtm-action.git"
  },
  "keywords": [
    "actions",
    "github-actions",
    "lgtm"
  ],
  "author": "ddradar",
  "license": "MIT",
  "engines": {
    "node": ">=12",
    "yarn": "^1.22.4"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yml}": "prettier --write"
  },
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@octokit/rest": "^18.0.12"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "@vercel/ncc": "^0.27.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^5.0.6",
    "jest": "^27.0.0-0",
    "js-yaml": "^4.0.0",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "ts-jest": "^27.0.0-next.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
