{
  "name": "lgtm-action",
  "version": "1.1.0",
  "private": true,
  "description": "Post image if you comment \"LGTM\"",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc && ncc build -m",
    "fix": "run-p fix:*",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:prettier": "npm run lint:prettier -- --write",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --ext .ts,.js --ignore-path .gitignore .",
    "lint:prettier": "prettier --ignore-path .gitignore -l \"**/*.{json,yaml,yml}\"",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ddradar/lgtm-action.git"
  },
  "keywords": [
    "actions",
    "github-actions",
    "lgtm"
  ],
  "author": "ddradar",
  "license": "MIT",
  "engines": {
    "node": "12",
    "npm": "^6.12.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ],
    "*.{json,yaml,yml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.2.2",
    "@octokit/rest": "^17.0.0"
  },
  "devDependencies": {
    "@types/jest": "^25.1.3",
    "@types/js-yaml": "^3.12.2",
    "@types/node": "^13.7.7",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/parser": "^2.21.0",
    "@zeit/ncc": "^0.21.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-simple-import-sort": "^5.0.1",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "js-yaml": "^3.13.1",
    "lint-staged": "^10.0.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3"
  }
}
