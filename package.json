{
  "name": "lgtm-action",
  "version": "2.0.0",
  "private": true,
  "description": "Post image if you comment \"LGTM\"",
  "author": "Nogic <24802730+nogic1008@users.noreply.github.com>",
  "license": "MIT",
  "repository": "https://github.com/ddradar/lgtm-action.git",
  "keywords": [
    "actions",
    "github-actions",
    "lgtm"
  ],
  "main": "dist/index.js",
  "engines": {
    "node": ">=16",
    "yarn": "^1.22.4"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "ncc build src/main.ts -m --license licenses.txt --target es2019",
    "fix": "run-p \"lint:eslint --fix\" \"lint:prettier --write\"",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --ext .ts --ignore-path .gitignore .",
    "lint:prettier": "prettier --ignore-path .gitignore -l \"**/*.{ts,json,yml}\"",
    "test": "jest"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yml}": "prettier --write"
  },
  "dependencies": {
    "@actions/core": "^1.7.0",
    "@actions/github": "^5.0.1"
  },
  "devDependencies": {
    "@octokit/webhooks-types": "^5.6.0",
    "@tsconfig/node16-strictest": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.2.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "lint-staged": "^12.4.2",
    "npm-run-all2": "^5.0.2",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.3",
    "ts-node": "^10.8.0",
    "typescript": "~4.7.2"
  },
  "resolutions": {
    "@types/node": "16.x",
    "type-fest": "^1.4.0"
  }
}
