{
  "name": "lgtm-action",
  "version": "1.2.6",
  "private": true,
  "description": "Post image if you comment \"LGTM\"",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/main.ts -m --license licenses.txt",
    "fix": "run-p fix:*",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:prettier": "yarn lint:prettier --write",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --ext .ts --ignore-path .gitignore .",
    "lint:prettier": "prettier --ignore-path .gitignore -l \"**/*.{json,yaml,yml}\"",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ddradar/lgtm-action.git"
  },
  "keywords": [
    "actions",
    "github-actions",
    "lgtm"
  ],
  "author": "ddradar",
  "license": "MIT",
  "engines": {
    "node": ">=12",
    "yarn": "^1.22.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*.{json,yaml,yml}": "prettier --write"
  },
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@octokit/rest": "^18.0.9"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/js-yaml": "^3.12.5",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "@vercel/ncc": "^0.24.1",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "js-yaml": "^3.14.0",
    "lint-staged": "^10.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  }
}
