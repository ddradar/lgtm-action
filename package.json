{
  "name": "lgtm-action",
  "version": "2.0.2",
  "private": true,
  "description": "Post image if you comment \"LGTM\"",
  "author": "Nogic <24802730+nogic1008@users.noreply.github.com>",
  "license": "MIT",
  "repository": "https://github.com/ddradar/lgtm-action.git",
  "keywords": [
    "actions",
    "github-actions",
    "lgtm"
  ],
  "main": "dist/index.js",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "ncc build src/main.ts -m --license licenses.txt --target es2021",
    "fix": "run-p \"lint:eslint -- --fix\" \"lint:prettier -- --write\"",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --ext .ts --ignore-path .gitignore .",
    "lint:prettier": "prettier --ignore-path .gitignore -l \"**/*.{ts,json,md,yml}\"",
    "test": "vitest run"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml}": "prettier --write"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1"
  },
  "devDependencies": {
    "@octokit/webhooks-types": "^7.2.0",
    "@tsconfig/node16": "^16.1.1",
    "@tsconfig/strictest": "^2.0.2",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "@vercel/ncc": "^0.38.0",
    "@vitest/coverage-v8": "^0.34.3",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-vitest": "^0.3.1",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "npm-run-all2": "^6.0.6",
    "prettier": "^3.0.3",
    "typescript": "~5.2.2",
    "vitest": "^0.34.3"
  }
}
