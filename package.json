{
  "name": "lgtm-action",
  "version": "2.0.2",
  "private": true,
  "description": "Post image if you comment \"LGTM\"",
  "author": "Nogic <24802730+nogic1008@users.noreply.github.com>",
  "license": "MIT",
  "repository": "https://github.com/ddradar/lgtm-action.git",
  "keywords": [
    "actions",
    "github-actions",
    "lgtm"
  ],
  "main": "dist/index.js",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "ncc build src/main.ts -m --license licenses.txt --target es2021",
    "fix": "run-p \"lint:eslint --fix\" \"lint:prettier --write\"",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --ext .ts --ignore-path .gitignore .",
    "lint:prettier": "prettier --ignore-path .gitignore -l \"**/*.{ts,json,yml}\"",
    "test": "vitest run"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yml}": "prettier --write"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1"
  },
  "devDependencies": {
    "@octokit/webhooks-types": "^7.0.2",
    "@tsconfig/node16": "^1.0.4",
    "@tsconfig/strictest": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vercel/ncc": "^0.36.1",
    "@vitest/coverage-c8": "^0.31.4",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-vitest": "^0.2.5",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "npm-run-all2": "^6.0.5",
    "prettier": "^2.8.8",
    "typescript": "~5.0.4",
    "vitest": "^0.31.4"
  }
}
