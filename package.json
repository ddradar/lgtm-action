{
  "name": "lgtm-action",
  "version": "1.2.3",
  "private": true,
  "description": "Post image if you comment \"LGTM\"",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc && ncc build -m",
    "bump": "npm version -m \"build: increment version to %s\"",
    "fix": "run-p fix:*",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:prettier": "npm run lint:prettier -- --write",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --ext .ts,.js --ignore-path .gitignore .",
    "lint:prettier": "prettier --ignore-path .gitignore -l \"**/*.{json,yaml,yml}\"",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ddradar/lgtm-action.git"
  },
  "keywords": [
    "actions",
    "github-actions",
    "lgtm"
  ],
  "author": "ddradar",
  "license": "MIT",
  "engines": {
    "node": ">=12",
    "yarn": "^1.22.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*.{json,yaml,yml}": "prettier --write"
  },
  "dependencies": {
    "@actions/core": "^1.2.4",
    "@octokit/rest": "^18.0.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.5",
    "@types/js-yaml": "^3.12.5",
    "@types/node": "^14.0.23",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "@zeit/ncc": "^0.22.3",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.18.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "js-yaml": "^3.14.0",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.3",
    "typescript": "^3.9.7"
  }
}
